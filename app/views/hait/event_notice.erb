<section class="section__profile container">
  <form>
    <div class="form-group row justify-content-center">
      <div class="col-lg-8 col-md-10 col-sm-10 col-xs-8">
        <div class="mb-5">
          <p>
          <h5><i class="fa fa-bullhorn" aria-hidden="true"></i> 이벤트</h5>
          </p>
          <% @event.each do |e| %>
            <div class="card mb-3 py-3">　<%= e.content %></div>
          <% end %>
        </div>
        <div>
          <div class="d-flex justify-content-end">
            <div class="mr-auto p-2"><h5><i class="fa fa-bullhorn" aria-hidden="true"></i> 공지사항</h5></div>
            <div class="p-2"><h6 class="text-right"><a href='#' data-confirm="더 이상 등록된 공지사항이 없습니다." >더보기</a></h5></div>
          </div>
          <hr/>
          <% @notice.each do |n| %>
            <p>
              <%= @index %>.
              <%= n.content %>
              <hr/>
            </p>
            <% @index += 1 %>
          <% end %>
        </div>
      </div>
    </div>
  </form>
</section>