<div class="mt-5"></div>
<div class="form-group row justify-content-center">
  <div class="col-lg-6 col-md-6 col-sm-8 col-xs-10">
    <div class="mb-5"></div>
    <p>
    <h5><i class="fa fa-home" aria-hidden="true"></i> 하숙 관리</h5>
    </p>
    
    <div class="container">
      <div class="justfiy-content-center">
        
      <% @house.each do |h| %>
      <% if h.user_id == current_user.id %>
        <div class="card mb-3">
          <div class="card-img-top">
            <div class="mt-3"></div>
            <img class="rounded mx-auto d-block" src="/images/home_manage.png" alt="Card image cap">  
          </div>
          <div class="card-body">
            <h4 class="card-title text-center"><%= h.house_name %></h4>
          </div>
          <ul class="list-group list-group-flush">
            <% h.rooms.each do |room| %>
            <li class="list-group-item">
              <div class="d-flex justify-content-end">
                <div class="mr-auto p-2"><h5><i class="fa fa-chevron-down" aria-hidden="true"></i><a href="/hait/room_detail/<%= room.id %>"><%= room.room_number %></a> 호</h5></div>
                <div class="p-2"><h6 class="text-right"><a href='#'>수정</a></h5></div>
              </div>
            </li>
            <% end %>
            
          </ul>
          <div class="card-body">
            <a href="/hait/room_register/<%=h.id%>" class="btn btn-block a_btn_primary">방 추가하기</a>
          </div>
        </div>
      <% end %>
      <% end %>
        
      </div>
    </div>
    
    <div class="container mt-3 mb-5">
      <a href="/hait/home_register" class="btn btn-primary bg-primary text-align-right d-block ticket_buy_button">하숙 추가하기</a>
    </div>
  </div>
</div>